# Database Configuration
MONGO_URI=mongodb://localhost:27017/paarsiv_hr

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration
# Development: http://localhost:5173
# Production: https://paarsiv-ems.onrender.com
FRONTEND_URL=https://paarsiv-ems.onrender.com

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Cookie/Domain Configuration
# Set CROSS_SITE_COOKIES=true if frontend is on a different site and you need SameSite=None cookies
# Required for production when frontend (Render) and backend are on different domains
CROSS_SITE_COOKIES=true
# Optional cookie domain for production (e.g., .example.com)
DOMAIN=

# Email Configuration (for password reset and notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Default Password for New Employees
# Note: This should be a secure default password. Employees must reset after first login.
DEFAULT_EMPLOYEE_PASSWORD=TempPassword123!

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration Aliases
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@paarsiv.com
